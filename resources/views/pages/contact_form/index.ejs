<%- include('/layouts/_config') -%>
<% config.meta.title = 'お問い合わせフォーム' %>
<%- include('/layouts/_header') -%>

<div id="contact_form" class="container">
    <h2><%= config.meta.title %></h2>
    <p>Netlifyは <a href="https://www.netlify.com/docs/form-handling">Form Handling</a> 機能によりメールフォームを簡単に作成することができます。</p>
    <form class="form-horizontal" name="contact_form" netlify>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="InputEmail">名前</label>
            <div class="col-sm-9">
                <input type="text" name="name" class="form-control" placeholder="名前">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="InputEmail">メール・アドレス（必須）</label>
            <div class="col-sm-9">
                <input type="email" name="mail" class="form-control" id="InputEmail" placeholder="メール・アドレス">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="InputEmail">本文（必須）</label>
            <div class="col-sm-9">
                <textarea name="message" class="form-control" cols="50" rows="16"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="btn btn-default">送信</button>
            </div>
        </div>
    </form>
</div>

<%- include('/layouts/_footer') -%>
